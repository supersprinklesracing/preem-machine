{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true
  },
  "packageRules": [
    {
      "groupName": "Mend: high confidence minor and patch dependency updates",
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "matchConfidence": [
        "very high",
        "high"
      ]
    }
  ]
}
